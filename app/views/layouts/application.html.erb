<!DOCTYPE html>
<html>
  <head>
    <title>BlogRubyJedi</title>
    <%= stylesheet_link_tag    'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div id="sidebar">
      <div id="logo">
        <%= link_to root_path do %>
          <%= image_tag("logo-ruby.png") %>
        <% end %>
      </div>

      <ul>
        <li class="category">Website</li>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Sobre", about_path %></li>
      </ul>

      <ul>
        <li class="category">Social</li>
        <li><a href="https://twitter.com/renanvy" target="_blank">Twitter</a></li>
        <li><a href="https://github.com/renanvy" target="_blank">Github</a></li>
        <li><a href="mailto:renanvy@gmail.com">Email</a></li>
      </ul>
    </div>
    
    <div id="main_content">
      <div id="header">
        <p>Blog RubyJedi</p>

        <% if admin_signed_in? %>
          <div class="buttons">
            <button class="button"><%= link_to "Novo post", new_post_path %></button>
            <button class="button"><%= link_to "Logout", destroy_admin_session_path, method: :delete %></button>
          </div>
        <% end %>
      </div>

      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert") %>
      <% end %>

      <%= yield %>
    </div>

  </body>
</html>